<!-- LEO GAZEBO -->

  <gazebo>
    <plugin
      filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
      <tf_topic>/model/gz_example_robot/tf</tf_topic>

      <!-- TF Frames -->
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
      <!-- Wheel Joints -->
      <left_joint>wheel_FL_joint</left_joint>
      <right_joint>wheel_FR_joint</right_joint>
      <left_joint>wheel_RL_joint</left_joint>
      <right_joint>wheel_RR_joint</right_joint>
      <wheel_separation>0.358</wheel_separation>
      <wheel_radius>0.0625</wheel_radius>

      <odom_publish_frequency>50</odom_publish_frequency>

      <!-- Topics -->
      <topic>/model/gz_example_robot/cmd_vel</topic>
      <odom_topic>/model/gz_example_robot/odometry</odom_topic>
      
      <max_linear_acceleration>2.5</max_linear_acceleration>
      <max_angular_acceleration>3</max_angular_acceleration>
      <min_linear_acceleration>-2.5</min_linear_acceleration>
      <min_angular_acceleration>-3</min_angular_acceleration>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin filename="ignition-gazebo-joint-state-publisher-system" name="ignition::gazebo::systems::JointStatePublisher">
      <update_rate>50</update_rate>
      <topic>/world/empty/model/gz_example_robot/joint_state</topic>
    </plugin>
  </gazebo>


  <!-- base ODE properties -->
  <gazebo reference="base_footprint">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>0.3</mu>
            <mu2>0.3</mu2>
          </ode>
          <bullet>
            <friction>0.3</friction>
            <friction2>0.3</friction2>
            <rolling_friction>0.1</rolling_friction>
          </bullet>
        </friction>
      </surface>
    </collision>
  </gazebo>

  <gazebo reference="base_link">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>0.3</mu>
            <mu2>0.3</mu2>
          </ode>
          <bullet>
            <friction>0.3</friction>
            <friction2>0.3</friction2>
            <rolling_friction>0.1</rolling_friction>
          </bullet>
        </friction>
      </surface>
    </collision>
  </gazebo>

  <!-- rocker ODE properties -->
  <gazebo reference="rocker_L_link">
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>0.3</mu>
            <mu2>0.3</mu2>
          </ode>
          <bullet>
            <friction>0.3</friction>
            <friction2>0.3</friction2>
            <rolling_friction>0.1</rolling_friction>
